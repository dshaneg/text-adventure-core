{
  "name": "@dshaneg/text-adventure-core",
  "version": "0.3.2",
  "description": "an engine for a text-based adventure game",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "mocha src/test/**/*.spec.ts --recursive --compilers ts:ts-node/register --reporter mocha-circleci-reporter",
    "smoke": "ts-node src/test/smoke.ts",
    "cover": "nyc yarn test",
    "lint": "tslint src/**/*.ts",
    "tsc": "tsc"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts",
      "src/test/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "report-dir": "./target/coverage",
    "all": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "game"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dshaneg/text-adventure-core.git"
  },
  "author": "Shane Gibbons <shanegibbons@gamestop.com> (https://github.com/dshaneg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dshaneg/text-adventure-core/issues"
  },
  "homepage": "https://github.com/dshaneg/text-adventure-core#readme",
  "dependencies": {
    "@types/uuid": "^3.4.3",
    "number-to-words": "^1.2.3",
    "pluralize": "^3.0.0",
    "postal": "^2.0.5",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^6.0.46",
    "@types/node-uuid": "0.0.28",
    "@types/pluralize": "0.0.27",
    "@types/postal": "^1.0.28",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "mocha-circleci-reporter": "^0.0.2",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "ts-mockito": "^2.2.9",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
}
